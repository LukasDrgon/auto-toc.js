{
  "name": "auto-toc-editor",
  "version": "0.0.1",
  "description": "On the fly TOC generator",
  "scripts": {
    "copy-github-md-css": "cp node_modules/github-markdown-css/github-markdown.css .",
    "copy-codemirror-css": "cp node_modules/codemirror/lib/codemirror.css .",
    "setup-css": "npm run copy-github-md-css && npm run copy-codemirror-css",
    "build-editor": "browserify -t brfs online-editor.js -o online-editor-dist.js",
    "minify-editor": "npm run build-editor && uglifyjs --compress --mangle -o online-editor-dist.min.js -- online-editor-dist.js"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timaschew/auto-toc.js.git"
  },
  "keywords": [
    "toc",
    "makrdown",
    "html",
    "table",
    "of",
    "contents",
    "client",
    "browser",
    "runtime"
  ],
  "author": "Anton Wilhelm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/timaschew/auto-toc.js/issues"
  },
  "homepage": "https://github.com/timaschew/auto-toc.js#readme",
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^13.0.0",
    "browserify-fs": "^1.0.0",
    "codemirror": "^5.12.0",
    "github-markdown-css": "^2.2.1",
    "uglify-js": "^2.6.2"
  }
}
